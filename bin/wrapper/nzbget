#!/bin/sh -e

BIN=nzbget
PWD=`dirname $(readlink -f $0)`

out="${1}"; shift
nzb="${1}"; shift
cfg="${1}"; shift

"${BIN}" -c "${cfg}" \
-o DestDir="${out}" \
-o LockFile="${out}"/nzbget/lock \
-o LogFile="${out}"/nzbget/log \
-o NzbDir="${out}"/nzbget/nzb \
-o QueueDir="${out}"/nzbget/queue \
"${nzb}"
